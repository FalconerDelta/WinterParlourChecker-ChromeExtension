{
  "manifest_version": 3,
  "name": "Winter Parlour Temperature Checker",
  "version": "1.0",
  "description": "Check temperature and show notifications",
  "host_permissions": [
   "https://reg.bom.gov.au/fwo/IDV60901/IDV60901.94866.json"
  ],
  "permissions": [
    "notifications",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
